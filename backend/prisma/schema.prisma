generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Example model - we'll add real models in Phase 1
model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  stock       Int      @default(0)
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
